<!DOCTYPE html>
<html lang="pt-BR">
<%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>

    <div class="blogs content">
        <h2>All blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a class="single" href="/blogs/<%= blog.id %>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet%></p>
                </a>
            <% }) %>
        <% } else { %>
            <p>Sorry, we have a problem with our database. =( Try again later </p>
        <% } %>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>
</html>